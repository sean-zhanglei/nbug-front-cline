{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test File",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}/vue2",
      "runtimeArgs": [
        "run-script",
        "test"
      ],
      "args": [
        "--",
        "${file}",
        "--watchAll=true"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug All Tests",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}/vue2",
      "runtimeArgs": [
        "run-script",
        "test"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
